{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es2015",
    "jsx": "react-jsx",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noResolve": true,
    "noEmit": false
  },
  "include": [
    "src/data/**/*",
    "src/domain/shakerService.ts",
    "src/presentation/**/*",
    "src/state/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
